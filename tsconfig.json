{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./",
        "module": "ESNext",
        "target": "ES2015",
        "lib": ["ES2017", "DOM"],
        "noEmitOnError": true,
        "importHelpers": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "allowJs": true,
        "types": ["jest", "node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}